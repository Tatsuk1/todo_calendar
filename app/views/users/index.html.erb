<h1>ユーザー一覧</h1>
<%= link_to '作成', new_user_path, class: "btn btn-outline-primary" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ユーザー名</th>
      <th scope="col">管理者権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.name %></td>
        <td scope="row"><%= user.admin? ?  'あり' : 'なし'%>
        <td><%= link_to '詳細', user, class: "btn btn-raised btn-success btn-indigo800_flt" %></td>
        <td><%= link_to '編集', edit_user_path(user), class: "btn btn-raised btn-primary" %></td>
        <td><%= link_to '削除', user, class: "btn btn-raised btn-danger", method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


